{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "baseUrl": ".",
    "outDir": "build",
    "lib": ["es6", "es7", "es2017", "dom"]
  },
  "exclude": ["./#/**/*.test.ts", "./#/**/*.test.tsx"]
}
